            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/bal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/iconsmall" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#2B2B2B"
                    android:layout_weight="1"
                    android:text="세계보건기구 (WHO) 기준사용" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B2B2B"
                android:textSize="20dp"
                android:text="한국환경공단은 좋음,보통,나쁨,매우나쁨 4가지 단계 만으로 기준을 나누지만 Air Adivce 에서는 세계보건기구(WHO) 기준을 사용합니다" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/bal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/iconsmall"/>

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#2B2B2B"
                    android:layout_weight="1"
                    android:text="개발자" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B2B2B"
                android:textSize="15dp"
                android:text="안상민 : asm543@naver.com \n박웅균 : dndrbs16@daum.net\n 채희정 : cogmlwjd7@naver.com" />
